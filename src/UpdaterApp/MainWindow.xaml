<Window x:Class="Ropufu.UpdaterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ropufu.UpdaterApp"
        mc:Ignorable="d"
        Title="Updater" Height="110" Width="525" ResizeMode="CanMinimize">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="20,10,20,0">
            <TextBlock x:Name="actionBlock" Text="Waiting for shutdown..." Margin="0,0,10,0" />
            <TextBlock x:Name="detailsBlock" />
        </TextBlock>
        <ProgressBar x:Name="progressBar" Height="10" Margin="20,10,20,0" />
    </StackPanel>
</Window>
