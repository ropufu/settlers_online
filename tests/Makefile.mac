PNAME = tests.out

CC = clang++

CFLAGS = -std=c++14 -stdlib=libc++ -Wall

PATHINC = -I./../../aftermath -I./../../opensource -I./..

PATHLIB =

LDFLAGS =

.VPATH: .

$(PNAME): $(patsubst %.cpp, %.o, $(wildcard *.cpp))
	$(CC) $^ -o $@ $(PATHLIB) $(LDFLAGS) $(LDLIBS)
	rm -rf *.o *.d

%.o: %.cpp
	$(CC) $< $(CFLAGS) -c -MD $(PATHINC)

include $(wildcard *.d)

.PHONY: clean

clean:
	rm -rf *.o *.d

